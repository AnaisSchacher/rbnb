<div class="profiles">

  <div class="main-container">
  	<div class="row" style="width: 100%;margin:0px;">

  		<div class="col-12 col-lg-6">
        <% @profiles.each do |profile| %>
          <div class="card">
            <%= link_to profile_path(profile), class:"no-text-decoration" do %>
              <div class="card__title">
                <% if profile.available? %>
                  <%= image_tag("icon-disponible", class:"img-available", :transformation=>[{height: 70, width: 70, crop: :fill}]) %>
                <% else %>
                  <%= image_tag("icon-disponible", class:"img-available img-unavailable", :transformation=>[{height: 70, width: 70, crop: :fill}]) %>
                <% end %>
              </div>
              <div class="card__body">
                <div class="half">
                  <div class="featured_text">
                    <h2><%= profile.user.name %></h2>
                    <p class="sub"><%= profile.category %></p>
                    <p class="price"><%= profile.price %>€</p>
                  </div>
                  <div class="image">
                    <%= cl_image_tag(profile.user.photo.key, :transformation=>[{height: 400, width: 500, crop: :fill}]) if profile.user.photo.attached? %>          </div>
                  </div>
              </div>
              <div class="card__footer">
                 <div class="action">
                  <button type="button"><%= link_to "Réserver", new_profile_booking_path(profile) %></button>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

    			<!-- 	END	TEST -->
  		</div>

  		<div class="col-12 col-lg-6">
        <div id="map"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>


  	</div>
  </div>
</div>
